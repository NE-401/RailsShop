<h4 class="display-5 text-primary">商品の編集</h4>

<table class="table table-bordered">
	<%= form_for(@product,url:"/products/update") do |f| %>
		<% pcat=@product.category %>
		<%= f.hidden_field :id, value: @product.id %>

		<tr>
			<th><%= f.label :name, "商品名" %></th>
			<td><%= f.text_field :name, value:@product.name %></td>
		</tr>

		<tr>
			<th><%= f.label :publisher, "販売元" %></th>
			<td><%= f.text_field :publisher, value:@product.publisher %></td>
		</tr>

		<tr>
			<th><%= f.label :category, "カテゴリー" %></th>
			<td><%= f.select :category, options_for_select([["その他",0],["書籍",1],["音楽",2],["DVD",3],["ゲーム",4],["PC,周辺機器",5],["キッチン",6],["食品,飲料",7],["ホビー",8]],pcat) %></td>
		</tr>

		<tr>
			<th><%= f.label :price, "税込価格" %></th>
			<td><%= f.text_field :price, value:@product.price %></td>
		</tr>

		<tr>
			<th><%= f.label :stock, "在庫数" %></th>
			<td><%= f.text_field :stock, value:@product.stock %></td>
		</tr>

		<tr>
			<th>商品の画像</th>
			<td><%= f.file_field :image %></td>
		</tr>

		<tr>
			<th><%= f.submit "変更", class:"btn btn-warning btn-sm" %></th>
			<td>
				<%= form_tag("/admin/show") do |ft| %>
					<%= hidden_field_tag :id, id %>
					<%= submit_tag "表示", class:"btn btn-info btn-sm" %>
					<%= link_to '戻る', "/admin", class:"btn btn-light btn-sm" %>
				<% end %>
			</td>
		</tr>
	<% end %>
	<% id=@product.id %>

</table>

<% content_for :html_title do %>ログイン<% end %>
<h4 class="display-5 text-primary">ログイン</h4>
<br>
<h4><font color="FF0000"><%= @msg %></font></h4>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(:session,url: '/login') do |f| %>
			<br>
			<%= f.label :mail %>
			<%= f.email_field :mail,class:'form-control' %>

			<%= f.label :password %>
			<%= f.password_field :password,class:'form-control' %>

			<br>
			<%= f.submit "ログイン", class: "btn btn-primary" %>
		<% end %>

		<br><br>
		<h5 class="display-6">新規登録は<ins><a href="/register">こちら</a></ins></h5>
	</div>
</div>
